<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/movies_destination">

    <fragment
        android:id="@+id/movies_destination"
        android:name="com.fake.cinemafake.movies.MoviesFragment"
        android:label="@string/movies_fragment"
        tools:layout="@layout/fragment_movies">

        <action
            android:id="@+id/action_movies_to_login_register"
            app:destination="@id/loginRegisterFragment" />

        <action
            android:id="@+id/action_movies_to_account"
            app:destination="@id/accountFragment" />

        <action
            android:id="@+id/action_movies_to_movies"
            app:destination="@id/moviesFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginRegisterFragment"
        android:name="com.fake.cinemafake.user.LoginRegisterFragment"
        android:label="@string/login_register_fragment"
        tools:layout="@layout/fragment_login_register">
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.fake.cinemafake.user.account.AccountFragment"
        android:label="@string/account_fragment"
        tools:layout="@layout/fragment_account">
    </fragment>

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.fake.cinemafake.movies.MoviesFragment"
        android:label="@string/movies_fragment"
        tools:layout="@layout/fragment_movies">
    </fragment>

</navigation>